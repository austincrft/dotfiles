" Folds
set foldmethod=indent
set foldlevel=2
set foldnestmax=1

" Tabs
set tabstop=2
set softtabstop=2
set shiftwidth=2
set textwidth=79

" Mappings
nnoremap <leader>md K|             " GetDoc
nnoremap <leader>mg [<C-D>|        " GoTo
nnoremap <leader>mr :Require<CR>|  " Reload ns
nnoremap <leader>mm :RunTests<CR>| " RunTests
