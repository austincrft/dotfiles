[alias]
    a = add
    s = status
    d = diff
    b = branch
    ps = push
    pl = pull
    co = checkout
    ci = commit

    # pushes and creates an upstream branch
    psu = "!git push -u origin HEAD"

    # deletes all branches except for the current one and master
    brclean = "!git branch | grep -v 'master\\|main\\|^*' | xargs git branch -D"