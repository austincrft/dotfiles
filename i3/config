# Constants
set $mod Mod4

set $background #e4cfe6
set $foreground #574921
set $gray       #825c31
set $primary    #95c7ae
set $secondary  #aec795
set $tertiary   #c7ae95
set $warning    #c79595

set $workspace1 "1  Code  "
set $workspace2 "2  Web  "
set $workspace3 "3  Chat  "
set $workspace4 "4  Misc  "
set $workspace5 "5  Music"

set $messenger "crx_bhegnkaaijcaiebmmlbhpcagoaiaacho"
set $hangouts "crx_knipolnnllmklapflnccelgolnpehhpl"

# General Config
font pango:Sauce Code Powerline 15

# Window-Related Bindings
bindsym $mod+Shift+q kill
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+v split v
bindsym $mod+semicolon split h
bindsym $mod+f fullscreen toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Shift+space floating toggle
bindsym $mod+r mode "  "
mode "  " {
    bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        bindsym Escape mode "default"
}

# Gaps
gap_size 10
new_window pixel 5

# Program Bindings
bindsym $mod+d exec rofi -show drun
bindsym $mod+Return exec i3-sensible-terminal

# Program Config
for_window [window_role="app"] floating disabled
assign [instance=$messenger class="google-chrome"] $workspace3
assign [instance=$hangouts class="google-chrome"] $workspace3
assign [class="google-chrome"] $workspace2

# Workspace Bindings
bindsym $mod+1 workspace $workspace1
bindsym $mod+2 workspace $workspace2
bindsym $mod+3 workspace $workspace3
bindsym $mod+4 workspace $workspace4
bindsym $mod+5 workspace $workspace5

bindsym $mod+Shift+1 move container to workspace $workspace1
bindsym $mod+Shift+2 move container to workspace $workspace2
bindsym $mod+Shift+3 move container to workspace $workspace3
bindsym $mod+Shift+4 move container to workspace $workspace4
bindsym $mod+Shift+5 move container to workspace $workspace5

# Volume & Media Bindings
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 1 -5%
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 1 +5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 1 toggle

bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous Volume & Media

# Sreen Brightness
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10

# Scripts
bindsym $mod+Shift+t exec ~/.config/i3/scripts/toggle-touchpad.sh
bindsym $mod+Shift+b exec ~/.config/i3/scripts/toggle-laptop-keyboard.sh
bindsym $mod+Shift+semicolon exec ~/.config/i3/scripts/pretty-i3lock.sh

# Exit binding
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Reload Bindings
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+x exec --no-startup-id xrdb ~/.Xresources

# Bar
bar {
    status_command i3blocks
        position top
        tray_output none
        colors {
            background $background
            statusline $warning
            # border       background   text
            focused_workspace  $background  $background  #574921
            active_workspace $background $background $warning
            inactive_workspace $background $background $warning
            urgent_workspace $warning $warning $primary

        }
}

# colors                BORDER      BACKGROUND TEXT        INDICATOR
client.focused          $primary    $primary   $background $warning
client.focused_inactive $warning    $warning   $foreground $warning
client.unfocused        $warning    $warning   $background $warning
client.urgent           $gray       $gray      $foreground $gray

# Startup Programs
exec_always feh --bg-scale ~/Dropbox/images/macbook/bg.png
exec compton
